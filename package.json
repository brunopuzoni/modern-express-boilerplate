{
  "name": "modern-express-boilerplate",
  "version": "1.0.0",
  "description": "A modern way to start an Express TS project",
  "author": "Bruno Franco Puzoni",
  "license": "ISC",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "start": "node dist/index.js",
    "transpile": "tsc"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.15",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3"
  }
}
